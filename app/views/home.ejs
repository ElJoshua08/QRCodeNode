<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>QRCode</title>
  <link rel="stylesheet" href="./css/home.css" />
  <link rel="shortcut icon" href="./icon/favicon.svg" type="image/x-icon">
</head>

<body>
  <main>
    <div class="title">
      <h1>QR</h1>
    </div>

    <section class="qr-generator">
      <h2>Generate New QR</h2>

      <input type="text" name="Text Input" id="textInput" placeholder="Enter your Text Or URL!" />

      <button id="createQrButton">
        <p>Create Your QR!</p>
      </button>
    </section>

    <section class="qr-container">
      <h2>Saved QRs</h2>

      <div class="slide-buttons">
        <ion-icon id="upButton" name="chevron-up-circle-outline"></ion-icon>
        <ion-icon id="downButton" name="arrow-down-circle-outline"></ion-icon>
      </div>
      <div class="qrs">
      </div>

    </section>

    <div class="qr-expanded">
      <ion-icon name="close-circle-outline" class="qr-expanded-close"></ion-icon>
      <div class="qr-expanded-image-container">
        <img src="" alt="QR Code" class="qr-expanded-image">
      </div>

      <div class="data">
        <h2 class="qr-expanded-title"></h2>
        <div class="qr-expanded-buttons">
          <ion-icon name="copy-outline"></ion-icon>
          <ion-icon name="download-outline"></ion-icon>
        </div>
      </div>


    </div>
  </main>

  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  <script src="./js/home.js"></script>
</body>

</html>